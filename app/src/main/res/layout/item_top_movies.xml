<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dp_4"
              android:paddingLeft="@dimen/dp_8"
              android:paddingRight="@dimen/dp_8"
              android:paddingTop="@dimen/dp_4">

    <ImageView
        android:id="@+id/item_base_maps_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_base_maps_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="@dimen/small"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/item_base_maps_note"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="1"
            android:lines="1"
            android:textSize="@dimen/small"
            android:ellipsize="end"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_base_maps_ctime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/small"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/item_base_maps_comment"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/item_base_maps_label"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>